<!DOCTYPE html>
<html lang="ru">
  <head>
    <title>AdminPanel</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= tinymce_assets %>

<!--    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>-->
<!--    <script src="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.min.js"></script>-->
<!--    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.min.css" rel="stylesheet">-->
<!--    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.png">-->
<!--    <link href="https://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama@2x.png">-->
  </head>

  <body>
    <% if controller_name == "sessions" %>
      <%= yield %>
    <% else %>
      <div class="container-fluid">
        <div class="row flex-nowrap">
          <%= render "admin/shared/sidebar" %>

          <div class="main-content col-auto col-md-9 col-xl-10">
            <%= render "admin/shared/header" %>

            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
              <h4><%= page_title %></h4>
              <%= render "admin/shared/breadcrumbs" %>
            </div>

            <div class="page-content">
              <%= yield %>
            </div>

            <%= render "admin/shared/messages", object: nil %>
            <%= render "admin/shared/footer" %>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
