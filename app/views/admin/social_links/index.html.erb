<div class="d-flex justify-content-end page-content__header">
  <%= link_to new_admin_social_link_path, class: "btn btn-light" do %>
    <i class="bi bi-plus"></i>
    <%= t "social_links.new_social_link" %>
  <% end %>
</div>

<% if @social_links.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center"><%= t "crud.table.id" %></th>
        <th scope="col"><%= t "crud.table.name" %></th>
        <th scope="col"><%= t "crud.table.link" %></th>
        <th scope="col" class="text-center"><%= t "crud.table.status" %></th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @social_links.each.with_index(1) do |social_link, index| %>
        <tr>
          <th scope="row" class="text-center"><%= index %></th>
          <td><%= social_link.name %></td>
          <td><%= social_link.link %></td>
          <td class="status text-center"><%= activity_status social_link.status %></td>
          <td>
            <%= link_to admin_social_link_path(social_link.id), class: "text-light" do %>
              <i class="bi bi-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_admin_social_link_path(social_link.id), class: "text-light" do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
          </td>
          <td>
            <%= link_to admin_social_link_path(social_link.id), data: { turbo_method: "delete", turbo_confirm: t("crud.table.confirm") }, class: "text-light" do %>
              <i class="bi bi-trash3"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-success text-center" role="alert"><%= t "crud.table.not_found" %></div>
<% end %>
