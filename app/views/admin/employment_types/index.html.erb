<div class="d-flex justify-content-end page-content__header">
  <%= link_to new_admin_employment_type_path, class: "btn btn-light" do %>
    <i class="bi bi-plus"></i>
    <%= t "employment_types.new_type" %>
  <% end %>
</div>

<% if @employment_types.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center"><%= t "crud.table.id" %></th>
        <th scope="col"><%= t "crud.table.name" %></th>
        <th scope="col" class="text-center"><%= t "crud.table.status" %></th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @employment_types.each.with_index(1) do |employment_type, index| %>
        <tr>
          <th scope="row" class="text-center"><%= index %></th>
          <td><%= employment_type.name %></td>
          <td class="status text-center"><%= activity_status employment_type.status %></td>
          <td>
            <%= link_to admin_employment_type_path(employment_type.id), class: "text-light" do %>
              <i class="bi bi-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_admin_employment_type_path(employment_type.id), class: "text-light" do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
          </td>
          <td>
            <%= link_to admin_employment_type_path(employment_type.id), data: { turbo_method: "delete", turbo_confirm: t("crud.table.confirm") }, class: "text-light" do %>
              <i class="bi bi-trash3"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= render "admin/shared/pagination_info", collection: @employment_types, total: @total_employment_types %>
<% else %>
  <div class="alert alert-success text-center" role="alert"><%= t "crud.table.not_found" %></div>
<% end %>
