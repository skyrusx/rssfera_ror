<div class="page-subtitle-box d-flex justify-content-between">
  <h4><%= t "skills.show_skill_title" %></h4>
  <div class="link-group mb-4">
    <%= link_to edit_admin_skill_path(@skill.id), class: "text-light" do %>
      <i class="bi bi-pencil-square"></i>
    <% end %>
    <%= link_to admin_skill_path(@skill.id), data: { turbo_method: "delete", turbo_confirm: t("crud.table.confirm") }, class: "text-light" do %>
      <i class="bi bi-trash3"></i>
    <% end %>
  </div>
</div>

<div class="admin-crud skills">
  <div class="row skill__data">
    <div class="col-lg-9">
      <div class="mb-4 mb-3 d-flex field">
        <div class="field-name justify-content-end"><%= t "crud.table.status" %></div>
        <div class="field-value"><%= activity_status @skill.status, true %></div>
      </div>
      <div class="mb-4 mb-3 d-flex field">
        <div class="field-name justify-content-end"><%= t "crud.table.name" %></div>
        <div class="field-value"><%= @skill.name %></div>
      </div>
    </div>
  </div>
</div>
