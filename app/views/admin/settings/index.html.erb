<div class="page-subtitle-box"><h4><%= t "settings.list_setting_title" %></h4></div>

<% if @settings.present? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center"><%= t "crud.table.id" %></th>
        <th scope="col"><%= t "crud.table.page_name" %></th>
        <th scope="col"><%= t "crud.table.meta.title" %></th>
        <th scope="col"><%= t "crud.table.meta.keywords" %></th>
        <th scope="col"><%= t "crud.table.meta.description" %></th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @settings.each.with_index(1) do |setting, index| %>
        <tr>
          <th scope="row" class="text-center"><%= index %></th>
          <td><%= setting.page_name %></td>
          <td><%= setting.meta_title %></td>
          <td><%= setting.meta_keywords %></td>
          <td><%= setting.meta_description %></td>
          <td>
            <%= link_to admin_setting_path(setting.id), class: "text-light" do %>
              <i class="bi bi-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_admin_setting_path(setting.id), class: "text-light" do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-success text-center" role="alert"><%= t "crud.table.not_found" %></div>
<% end %>
